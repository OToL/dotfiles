{
    "version" : "1.0.0",
    "settings": {
        "backup" : true
    },
    "configs" : {
        "neovim" : {
            "config" : "nvim",
            "deploy" : {
                "unix" : {
                    "path" : "~/.config/nvim/"
                },
                "windows" : {
                    "path" : "%LOCALAPPDATA%/nvim"
                }
            }
        },
        "tmux" : {
            "config" : "tmux/.tmux.conf",
            "deploy" : {
                "unix" : {
                    "path" : "~/.tmux.conf"
                }
            }
        },
        "yazi" : {
            "config" : "yazi",
            "deploy" : {
                "unix" : {
                    "path" : "~/.config/yazi/"
                }
            }
        }
    }
}
